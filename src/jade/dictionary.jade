include _mixin/mixin


doctype html
html(lang="en")


    +headSite("Datification", linkSite.styleLinkDictionary, "")


    body

        //- BLOCK HEADER [nav, bottomInfo, logo, slogan]
        block header
            include ./_template/header


        .blocks.blocks__internal
            .container.clearfix.blocks__fixed
                .blocks__left
                    include ./_template/letter


                .blocks__right
                    .advertising__top.advertising__block

                    p.main__title!= "последние статьи"

                    +blockNewsLoop("blocks__row_column", 3, 2, "block_hide")


        //- BLOCK FOOTER
        block footer
            include ./_template/footer


        - for(var i = 0; i < linkSite.scriptLinkDictionary.length; i++)
            script(src= linkSite.scriptLinkDictionary[i])